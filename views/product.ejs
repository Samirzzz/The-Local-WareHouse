        <!--shop-->
        <section class="shop container">
                <div class="filter">
                    <a href="#"><button>All</button></a>
                    <a href="/jeanshtml"><button>Jeans </button></a>   
                    <a href="/shirtshtml"><button>Tshirts & Hoodies</button></a>
                </div>
                <h2 class="section-title">Tshirts & Hoodies</h2> 
                <!--content-->
                <% if (product.length> 0) { %>
                    <div class="shop-content">
                        <% product.forEach((prod, index) => { %>
                            <div class="product-box">
                                <img src="/images/<%= prod.image %>" alt="" class="img">
                                <h2 class="product-title"><%= prod.name %></h2>
                                <span class="price"><%= prod.price %>$</span>
                                <div class="add-cart">
                                    <i class='bx bxs-shopping-bag-alt'  onclick="addToCart('<%= prod._id %>')"></i>
                                    <i class="bx bx-heart" onclick="addToWishlist('<%= prod._id %>')"></i>
                                </div>
                            </div>
                            <% if ((index + 1) % 3 === 0) { %>
                                </div>
                                <div class="shop-content">
                            <% } %>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p>There are no products to display...</p>
                <% } %>
        </section>
       
        <button class="open-button" onclick="openForm()"><img src="images/chaticon.png"></button>
    <div class="chat-popup" id="myForm">

      <form action="/action_page.php" action="/add-to-cart" class="form-container" method="post">
        
