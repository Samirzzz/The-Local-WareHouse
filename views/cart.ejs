<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The-Local-WareHouse|Ecommerce Website design</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <%- include("./partials/navbar.ejs") %>
       <h1 style="text-align: center;padding: 20px;">My Cart</h1>
       <!--shop-->
       <section class="shop container">
        <% if (order.length > 0) { %>
          <div class="shop-content">
            <% order.forEach((prod, index) => { %>
              <div class="product-box">
                <% if (prod && prod.image) { %>
                  <img src="/images/<%= prod.image %>" alt="" class="img">
                <% } %>
                <% if (prod && prod.name) { %>
                <h2 class="product-title"><%= prod.name %></h2> <% } %>
                <% if (prod && prod.price) { %>
                <span class="price"><%= prod.price %>$</span><% } %>
                <div class="add-cart">
                    <i class='bx bxs-message-alt-x' onclick="removeFromCart('<%= prod.id%>')"></i>                        

                </div>
              </div>
              <% if ((index + 1) % 3 === 0) { %>
                </div>
                <div class="shop-content">
              <% } %>
            <% }) %>
          </div>
        <% } else { %>
          <p>There are no products in the cart...</p>
        <% } %>
      </section>
      


<script src="/js/main.js"></script>
<%- include("./partials/footer.ejs") %>
</body>
</html>