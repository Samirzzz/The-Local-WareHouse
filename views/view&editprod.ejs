<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View and edit user</title>

    <!-- Box Icons  -->
    <link
      href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
    />
    <!-- Styles  -->
    <link rel="stylesheet" href="/css/adminDashboard.css" />
  </head>

  <body>
    <%- include('./partials/aside.ejs')%>

    <section class="users">
      <% if (product.length> 0) { %>
        <div class="board">
            <table width="100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>ID</th>
                        <th>Price</th>
                        <th>Type</th>
                        <th>Quantity</th>
                        <th colspan="3">Action</th>
                    </tr>
                </thead>
                <% product.forEach(prod=> { %>
                <tbody>

                    <tr>
                        <td class="people">
                            <img src="/images/<%= prod.image %>" alt="">
                            <div class="people-de">
                             <p><%= prod.name %></p> 
                            </div>
                        </td>
                        <td class="people-des">
                          <p><%= prod.id %></p> 
                        </td>
                        <td class="role">
                          <p><%= prod.price %></p> 
                        </td>
                        <td class="role">
                            <p><%= prod.type %></p> 
                          </td>
                        <td class="role">
                            <p><%= prod.Quantity %></p> 
                        </td>
                        <td class="edit"><a href="#">Edit</a></td>
                        <td class="edit"> <a href="/admin/delete/<%= prod.image %>/<%= prod._id %>">Delete</a></td> 
                    </tr>
                    
               </tbody>
               <% }) %>
            </table>
            <% } else { %>
              <p>There are no Products to display...</p>
          <% } %>
    </div>                
    </section>

    <!-- Link JS -->
    <script src="/js/adminDashboard.js"></script>

  </body>
</html>